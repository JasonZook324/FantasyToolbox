@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="form-container">
    <div class="form-card">
        <div class="form-title">Create Account</div>
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="form-message-error">@Model.Message</div>
        }
        <form method="post" class="form">
            <label asp-for="Input.FirstName"></label>
            <input asp-for="Input.FirstName" type="text" autocomplete="given-name" placeholder="First Name" />
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>

            <label asp-for="Input.LastName"></label>
            <input asp-for="Input.LastName" type="text" autocomplete="family-name" placeholder="Last Name" />
            <span asp-validation-for="Input.LastName" class="text-danger"></span>

            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" type="email" autocomplete="email" placeholder="Email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>

            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" type="password" autocomplete="new-password" placeholder="Password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>

            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" type="password" autocomplete="new-password" placeholder="Confirm Password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

            <button type="submit">Register</button>
        </form>
        <div class="form-link">
            <a href="/Login">Already have an account? Login</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}