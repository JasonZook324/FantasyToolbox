@page
@model VerifyEmailModel
@{
    ViewData["Title"] = "Verify Email";
}

<div class="text-center">
    <h1 class="display-4">Verify Your Email</h1>
    <p class="lead">We've sent a verification code to <strong>@Model.Email</strong></p>
    <p>Please enter the 6-digit code below to complete your registration.</p>
</div>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="Email" />
            
            <div class="form-group">
                <label asp-for="Input.VerificationCode" class="control-label">Verification Code</label>
                <input asp-for="Input.VerificationCode" class="form-control text-center" style="font-size: 1.2em; letter-spacing: 0.1em;" maxlength="6" />
                <span asp-validation-for="Input.VerificationCode" class="text-danger"></span>
            </div>
            
            <div class="form-group text-center">
                <input type="submit" value="Verify Email" class="btn btn-primary btn-lg" />
            </div>
            
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-info">
                    @Model.Message
                </div>
            }
        </form>
        
        <div class="text-center mt-3">
            <hr />
            <p class="text-muted">Didn't receive the code?</p>
            <form method="post" asp-page-handler="Resend" style="display: inline;">
                <input type="hidden" asp-for="Email" />
                <button type="submit" class="btn btn-outline-secondary">
                    Resend Code
                </button>
            </form>
        </div>
        
        <div class="text-center mt-3">
            <small class="text-muted">
                The verification code expires in 15 minutes.<br/>
                If you're having trouble, please contact support.
            </small>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Auto-focus on the verification code input
        document.addEventListener("DOMContentLoaded", function() {
            document.getElementById("Input_VerificationCode").focus();
        });
        
        // Allow only numeric input for verification code
        document.getElementById("Input_VerificationCode").addEventListener("input", function(e) {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
    </script>
}